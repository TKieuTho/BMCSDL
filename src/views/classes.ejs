<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách lớp - Hệ thống Quản lý Sinh viên</title>
    <link rel="stylesheet" href="<%= BASE_URL %>/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Danh sách lớp</h2>
            <div>
                <% if (isAdmin) { %>
                    <a href="/admin/employees" class="btn btn-info">
                        <i class="fas fa-users"></i> Quản lý nhân viên
                    </a>
                    <% if (showAssignButton) { %>
                        <button type="button" class="btn btn-success ms-2" data-bs-toggle="modal" data-bs-target="#assignClassesModal">
                            <i class="fas fa-plus"></i> Phân công lớp
                        </button>
                    <% } %>
                <% } %>
                <a href="<%= BASE_URL %>/auth/logout" class="btn btn-danger ms-2">
                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                </a>
            </div>
        </div>

        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Mã lớp</th>
                        <th>Tên lớp</th>
                        <th>Người quản lý</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (classes.length === 0) { %>
                        <tr>
                            <td colspan="4" class="text-center">Không có lớp nào</td>
                        </tr>
                    <% } else { %>
                        <% classes.forEach(function(lop) { %>
                            <tr>
                                <td><%= lop.MALOP %></td>
                                <td><%= lop.TENLOP %></td>
                                <td>
                                    <% if (lop.TENNGUOIQUANLY) { %>
                                        <%= lop.TENNGUOIQUANLY %>
                                    <% } else { %>
                                        <span class="text-muted">Chưa có người quản lý</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="<%= BASE_URL %>/class/<%= lop.MALOP %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> Xem chi tiết
                                    </a>
                                    <% if (isAdmin && !lop.MANV) { %>
                                        <button class="btn btn-success btn-sm assign-class" 
                                                data-malop="<%= lop.MALOP %>"
                                                data-bs-toggle="modal" 
                                                data-bs-target="#assignClassModal">
                                            <i class="fas fa-user-plus"></i> Phân lớp
                                        </button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <% if (isAdmin && showAssignButton) { %>
    <!-- Modal for assigning multiple classes -->
    <div class="modal fade" id="assignClassesModal" tabindex="-1" aria-labelledby="assignClassesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignClassesModalLabel">Phân công lớp cho nhân viên</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="assignClassesForm">
                        <input type="hidden" id="employeeId" value="<%= employeeId %>">
                        <div class="mb-3">
                            <label class="form-label">Chọn các lớp cần phân công:</label>
                            <div class="class-list" style="max-height: 300px; overflow-y: auto;">
                                <% if (unassignedClasses && unassignedClasses.length > 0) { %>
                                    <% unassignedClasses.forEach(function(lop) { %>
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox" 
                                                   name="classes" value="<%= lop.MALOP %>" 
                                                   id="class-<%= lop.MALOP %>">
                                            <label class="form-check-label" for="class-<%= lop.MALOP %>">
                                                <%= lop.MALOP %> - <%= lop.TENLOP %>
                                            </label>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="text-muted">Không có lớp nào chưa được phân công</p>
                                <% } %>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="confirmAssignClasses">Xác nhận</button>
                </div>
            </div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Handle confirm assign multiple classes button click
        document.getElementById('confirmAssignClasses').addEventListener('click', async function() {
            const form = document.getElementById('assignClassesForm');
            const employeeId = document.getElementById('employeeId').value;
            const selectedClasses = Array.from(form.querySelectorAll('input[name="classes"]:checked'))
                .map(checkbox => checkbox.value);

            if (selectedClasses.length === 0) {
                alert('Vui lòng chọn ít nhất một lớp');
                return;
            }

            try {
                const response = await fetch('/admin/classes/assign-multiple', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        manv: employeeId,
                        classes: selectedClasses
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    // Close modal and refresh page
                    const modal = bootstrap.Modal.getInstance(document.getElementById('assignClassesModal'));
                    modal.hide();
                    window.location.reload();
                } else {
                    alert(result.error || 'Có lỗi xảy ra');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi phân công lớp');
            }
        });
    });
    </script>
    <% } %>

    <% if (isAdmin) { %>
    <!-- Modal for assigning class -->
    <div class="modal fade" id="assignClassModal" tabindex="-1" aria-labelledby="assignClassModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignClassModalLabel">Phân lớp cho nhân viên</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="assignClassForm">
                        <input type="hidden" id="selectedMalop" name="malop">
                        <div class="mb-3">
                            <label for="manv" class="form-label">Chọn nhân viên</label>
                            <select class="form-select" id="manv" name="manv" required>
                                <option value="">Chọn nhân viên...</option>
                                <% employees.forEach(function(employee) { %>
                                    <option value="<%= employee.MANV %>"><%= employee.HOTEN %></option>
                                <% }); %>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="confirmAssign">Xác nhận</button>
                </div>
            </div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Handle assign class button click
        const assignButtons = document.querySelectorAll('.assign-class');
        assignButtons.forEach(button => {
            button.addEventListener('click', function() {
                const malop = this.dataset.malop;
                document.getElementById('selectedMalop').value = malop;
            });
        });

        // Handle confirm assign button click
        document.getElementById('confirmAssign').addEventListener('click', async function() {
            const form = document.getElementById('assignClassForm');
            const formData = new FormData(form);
            const data = {
                malop: formData.get('malop'),
                manv: formData.get('manv')
            };

            try {
                const response = await fetch('/admin/classes/assign', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (result.success) {
                    // Close modal and refresh page
                    const modal = bootstrap.Modal.getInstance(document.getElementById('assignClassModal'));
                    modal.hide();
                    window.location.reload();
                } else {
                    alert(result.error || 'Có lỗi xảy ra');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi phân lớp');
            }
        });
    });
    </script>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 